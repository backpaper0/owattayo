{
	"name": "Claude Code in Dev Container example",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"runArgs": [
		"--cap-add=NET_ADMIN",
		"--cap-add=NET_RAW",
		"--network=devcontainers"
	],
	"features": {
		"ghcr.io/devcontainers/features/python": {
			"version": "none",
			"toolsToInstall": "uv,pre-commit"
		},
		"ghcr.io/devcontainers/features/node": {},
		"ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {},
		"./setup-for-claude-code": {},
		"./workspace-owner": {}
	},
	"containerEnv": {
		"CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
		"DISABLE_AUTOUPDATER": "1",
		"PROMPT_COMMAND": "history -a",
		"HISTFILE": "/commandhistory/.bash_history",
		"UV_LINK_MODE": "copy",
		"OWATTAYO_NOTIFIER": "${localWorkspaceFolderBasename}",
		"SSH_AUTH_SOCK": "/ssh-agent"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"redhat.vscode-yaml"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.formatOnSave": true
				},
				"python.defaultInterpreterPath": "/workspace/.venv/bin/python"
			}
		}
	},
	"remoteUser": "vscode",
	"postStartCommand": "sudo /usr/local/bin/init-firewall.sh && sudo /usr/local/bin/update-workspace-owner.sh",
	"waitFor": "postStartCommand",
	"mounts": [
		"source=claude-code-bashhistory,target=/commandhistory,type=volume",
		"source=claude-code-config,target=/home/vscode/.claude,type=volume",
		"source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
	]
}